<Alloy>
	<NavigationWindow module="ui">
		<Window layout="vertical">

			<View id="header">
				<Label id="lblCityName"></Label>
				<ImageView id="imgviewTemperature" class="imgviewtemperature"/>
				<Label id="lblTemperature"></Label>
			</View>

			<ScrollView id="viewMenu"  center="true">
				<View id="viewColumn01">
					<View  layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE" left="50">
						<ImageView id="imgWhatToDo" class="imgviewmenu" onClick="showListPlace" />
						<Label id="lblWhatToDo" class="lblMenuItem" onClick="showListPlace"/>
					</View>

					<View layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
						<ImageView id="imgFavorite"  class="imgviewmenu" onClick="showFavoritePlace" />
						<Label id="lblFavorite" class="lblMenuItem" onClick="showFavoritePlace"/>
					</View>
				</View>

				<View id="viewColumn02">
					<View layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
						<ImageView id="imgInformation"  class="imgviewmenu" onClick="showInfo" />
						<Label id="lblInformation" class="lblMenuItem"/>
					</View>
					<View layout="vertical" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
						<ImageView id="imgEvent"  class="imgviewmenu" />
						<Label id="lblEvent" class="lblMenuItem"/>
					</View>
				</View>

			</ScrollView>
		</Window>
	</NavigationWindow>


</Alloy>
