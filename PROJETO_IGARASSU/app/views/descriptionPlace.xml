<Alloy>
	<NavigationWindow id="navWindow" module="ui">
		<Window id="wincontent">
			<ScrollView id="scrollView" showVerticalScrollIndicator="true" showHorizontalScrollIndicator="true">

				<View id="viewDescription">

				<ImageView id="imgPlace" />
				<View id="viewBtn">
					<ImageView id="btnFavorite" onClick="favoritePlace" />
					<ImageView id="btnMap" onClick="showMap" />
				</View>
				<Label id="lblAddress" />
				<Label id="lblPrice" />
				<Label id="lblPhone" />
				<Label id="lblDescription" />

			</View>
		</ScrollView>

		</Window>
	</NavigationWindow>
</Alloy>
