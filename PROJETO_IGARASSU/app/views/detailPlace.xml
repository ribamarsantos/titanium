<Alloy>
	<Window id="winDetail">
		<Label id="lblPlace" />
			<TableView id="tableViewDetailPlace" dataCollection="places" onClick="showDescriptionPlace" dataFilter="filterPlace">
				<TableViewRow>
						<View id="viewDetailPlace">
								<ImageView id="imgphotoPlace" image="{photo}" />
							<View id="viewInfoDetailPlace">
									<Label id="lblPlaceName" text="{place_name}" />
									<Label id="lblPlacePhone" text="{phone}" />
									<ImageView id="btnMap" class="btnMap" />
									<ImageView id="btnFavorite" class="btnFavorite" />
							</View>
						</View>
				</TableViewRow>
			</TableView>
	</Window>
</Alloy>
